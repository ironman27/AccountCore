@model AccountCore.Contract.Employee

@{
    ViewData["Title"] = "Employee";
    Layout = "_Layout";
}

<section class="content">

    <div class="row">
        <div class="col-lg-9">
            <a class="btn btn-primary pull-right" style="margin-bottom: 10px" asp-action="Add">Add New Employee</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="grid-employees" name="grid-employees" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="col-md-2">Name</th>
                                        <th class="col-md-5">Salary</th>
                                        <th class="col-md-3">Manager</th>
                                        <th class="col-md-1">Position</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    <script src="~/js/employee/index.js"></script>
}